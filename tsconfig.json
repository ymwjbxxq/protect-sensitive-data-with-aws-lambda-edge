{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "target": "ES2020",
    "baseUrl": "./src"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./tests/**/*.ts",
    "node_modules"
  ]
}